<% provide(:title, "Log in") %>

<div class="container" style="padding-top: 20vh;">

  <div class="row">
    <div class="col s6 offset-s3 z-depth-3" style="padding: 30px 30px;background-color: white;">
			      
			<h5>Login</h5>
      <hr><br>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input type="email" class="validate" name="session[email]" required>
            <label for="icon_account_circle">E-mail</label>
          </div>       
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
            <input type="password" class="validate" name="session[password]" required>
            <label for="icon_lock">Password</label>
          </div>       
        </div>
        <div class="row">
          <button class="btn waves-effect waves-light" type="submit" name="action" style="float:right;">
            Login
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
