

<div class="row">
	<div class="col s8">
		<h5> <%= "Department: " + @department.name + "(" + @department.id.to_s + ")" %></h5>
	</div>
	
	<%= form_for(:department, url: "/department_pdf") do |f| %>
		<div class="col s4">
			<input type="text" name="id" value="<%= @department.id %>" hidden />
			<button class="btn waves-effect waves-light button-pdf" type="submit" name="action">
				Print
			</button>
		</div>
	<% end %>
</div>
<hr>

<div class="row">
  <div class="col s12 m6 l6">
    <div class="card">
      <div class="border-space">
        <b>Number of Student</b><hr>
        <canvas id="chartNumYear"></canvas>
      </div>
    </div>
  </div>

  <div class="col s12 m6 l6">
    <div class="card">
      <div class="border-space">
        <b>Student in each curriculum</b><hr>
        <canvas id="chartNumCurriculum"></canvas>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m8 l8">
    <div class="card">
      <div class="border-space">
        <b>GPAX each semester</b><hr>
        <canvas id="chartGPAX"></canvas>
      </div>
    </div>
  </div>
  
  <div class="col s12 m4 l4">
    <div class="card">
      <div class="border-space">
        <table class="bordered">
          <thead>
            <th>Status</th>
            <th>person(s)</th>
          </thead>
          <tbody>
            <% @numStudentStatus.each do |status| %>
              <tr>
                <td><%= status.status %></td>
                <td><%= status.num %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card">
      <div class="border-space">
        <table class="bordered">
          <thead>
            <th>Status</th>
            <th>person(s)</th>
          </thead>
          <tbody>
						<tr>
							<td>นักเรียนที่ไม่จบตามหลักสูตร</td>
							<td><%= @fail %></th>
						</tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_department_path(@department) %> |
<%= link_to 'Back', departments_path %>

<script>
	$(function() {
    var year = new Chart($("#chartNumYear"), {
		    type: 'bar',
		    data: {
		        labels: [
  		        	<% @numStudentYear.each do |year| %>
  		        		'<%= "year " + (Date.today.year - year.year + 1).to_s %>',
                <% end %>
		        ],
		        datasets: [{
		            label: 'Year',
		            data: [
                    <% @numStudentYear.each do |year| %>
                      '<%= year.num.to_s %>',
                    <% end %>
		            ],
		            backgroundColor: [
                  <% @numStudentYear.each do |year| %>
                    "rgba(<%= rand(255).to_s + ',' + rand(255).to_s + ',' + (255-year.num).to_s %>,0.6)",
                  <% end %>
                ],
		        }]
		    },
        options: {
            legend: {
                display: false
            }
        }
		});
    var curriculum = new Chart($("#chartNumCurriculum"), {
        type: 'bar',
        data: {
            labels: [
                <% @numStudentCurriculum.each do |curriculum| %>
                  '<%= curriculum.name %>',
                <% end %>
            ],
            datasets: [{
                label: 'Year',
                data: [
                    <% @numStudentCurriculum.each do |curriculum| %>
                      '<%= curriculum.num.to_s %>',
                    <% end %>
                ],
                backgroundColor: [
                  <% @numStudentCurriculum.each do |curriculum| %>
                    "rgba(<%= rand(255).to_s + ',' + rand(255).to_s + ',' + (255-curriculum.num).to_s %>,0.6)",
                  <% end %>
                ],
            }]
        },
        options: {
            legend: {
                display: false
            }
        }
    });

    var gpax = new Chart($("#chartGPAX"), {
        type: 'line',
        data: {
            labels: [
                <% @gpaxEachSemester.each do |gpax| %>
                  '<%= gpax.year.to_s + '-' + gpax.semester.to_s %>',
                <% end %>
            ],
            datasets: [{
                label: 'Year',
                data: [
                    <% @gpaxEachSemester.each do |gpax| %>
                      '<%= sprintf("%.2f",gpax.gpax) %>',
                    <% end %>
                ],
                borderColor: "rgba(75,192,192,1)",
                pointBorderColor: "rgba(75,192,192,1)",
                pointBorderWidth: 5,
                pointHoverRadius: 7,
                pointHoverBackgroundColor: "rgba(75,192,192,1)",
                pointHoverBorderColor: "rgba(220,220,220,1)",
                pointHitRadius: 10,
                fill: false
            }]
        },
        options: {
            legend: {
                display: false
            }
        }
    });
	});
</script>
