
<h5>Personnel Info : <%= @personnel.id %></h5>
<hr>

<%= form_for(:personnel, url: "/personnel_pdf") do |f| %>
  <div class="row">
    <button class="btn waves-effect waves-light" type="submit" name="action" style="float:right;">
      Print
    </button>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col s6">
  	  <div class="container">
  	  	<img class="materialboxed" src="https://cdn.psychologytoday.com/sites/default/files/field_blog_entry_images/Donald_Trump_%2814235998650%29_%28cropped%29.jpg" height="100%" width="100%">
  	  </div>
    </div>
    <div class="col s6">
   	  <div class="container">
  	   	<table class="bordered highlight">

          <tbody>
            <tr>
              <th>Name</th>
              <td><%= (@personnel.first_name || "") + " " + (@personnel.last_name || "") %></td>
            </tr>

            <tr>
            	<th>SSN</th>
              <td><%= @personnel.ssn %></td>
            </tr>

            <tr>
            	<th>Birthdate</th>
              <td><%= @personnel.birth_date %></td>
            </tr>

            <tr>
            	<th>Gender</th>
              <td><%= @personnel.gender %></td>
            </tr>

            <tr>
            	<th>Email</th>
              <td><%= @personnel.email %></td>
            </tr>

            <tr>
            	<th>Work in</th>
              <td><%= @workin %></td>
            </tr>

            <tr>
            	<th>Manage</th>
              <td><%= @manage %></td>
            </tr>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <ul class="collapsible" data-collapsible="expandable">

    <li>
      <div class="collapsible-header"><i class="material-icons">assignment</i>Courses info</div>
      <div class="collapsible-body">
        <div class="row">
           <div class="col s12">
            <div class="container">
              <table class="striped highlight">
                <thead>
                  <th>Course code</th>
                  <th>Name</th>
                  <th>Year-Semester</th>
                  <th>Section</th>
                  <th></th>
                </thead>
                  <tbody>
                    <% @personnel.sections.each do |section| %>
                      <tr>
                        <td><%= section.course.code.id  %></td>
                        <td><%= section.course.name %></td>
                        <td><%= section.year.to_s + "-" + section.semester.to_s  %></td>
                        <td><%= section.sec  %></td>
                        <td>
                          <a href='/sections/<%= section.id %>'><i class='material-icons'>description</i></a>&nbsp;&nbsp;&nbsp;
                          <a href='/sections/<%= section.id %>/edit'><i class='material-icons'>build</i></a>&nbsp;&nbsp;&nbsp;
                          <a data-confirm='You sure?' rel='nofollow' data-method='delete' href='/students/<%= section.id %>'><i class='material-icons'>delete</i></a>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
           </div>
        </div>
      </div>
    </li>

    <li>
      <div class="collapsible-header"><i class="material-icons">face</i>Student info</div>
      <div class="collapsible-body">
        <div class="row">
           <div class="col s12">
            <div class="container">
              <table class="striped highlight">
                <thead>
                  <th>Student code</th>
                  <th>Name</th>
                  <th>E-mail</th>
                  <th>Gender</th>
                  <th>Status</th>
                  <th>GPAX</th>
                  <th></th>
                </thead>
                  <tbody>
                    <% @students.each do |student| %>
                      <tr>
                        <td><%= student.id  %></td>
                        <td><%= (student.first_name || "") + " " + (student.last_name || "") %></td>
                        <td><%= student.email %></td>
                        <td><%= student.gender  %></td>
                        <td><%= student.status  %></td>
                      <!--  <td><%= student.gpax  %></td>-->
                        <td>
                          <a href='/students/<%= student.id %>'><i class='material-icons'>description</i></a>&nbsp;&nbsp;&nbsp;
                          <a href='/students/<%= student.id %>/edit'><i class='material-icons'>build</i></a>&nbsp;&nbsp;&nbsp;
                          <a data-confirm='You sure?' rel='nofollow' data-method='delete' href='/students/<%= student.id %>'><i class='material-icons'>delete</i></a>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
           </div>
        </div>
      </div>
    </li>

  </ul>
</div>

<script>
	$(document).ready(function(){
    	$('.collapsible').collapsible();
	});
</script>
