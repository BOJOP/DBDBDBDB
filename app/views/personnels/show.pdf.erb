
<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_javascript_include_tag "application.js" %>
    <%= wicked_pdf_stylesheet_link_tag "application.scss" -%>

    <%= wicked_pdf_stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= wicked_pdf_javascript_include_tag "application", "data-turbolinks-track" => true %>

  </head>

  <body>

    <div class="container">
      <b>Personal Info</b><hr>
      <div class="row">
        <div class="col s6">
      	  <div class="container">
            <%= wicked_pdf_image_tag "https://cdn.psychologytoday.com/sites/default/files/field_blog_entry_images/Donald_Trump_%2814235998650%29_%28cropped%29.jpg", :width=>"250", :height=>"350" %>
      	  </div>
        </div>
        <div class="col s6">
       	  <div class="container">
      	   	<table class="bordered highlight">

              <tbody>
                <tr>
                  <th>Name</th>
                  <td><%= (@personnel.first_name || "") + " " + (@personnel.last_name || "") %></td>
                </tr>

                <tr>
                	<th>SSN</th>
                  <td><%= @personnel.ssn %></td>
                </tr>

                <tr>
                	<th>Birthdate</th>
                  <td><%= @personnel.birth_date %></td>
                </tr>

                <tr>
                	<th>Gender</th>
                  <td><%= @personnel.gender %></td>
                </tr>

                <tr>
                	<th>Email</th>
                  <td><%= @personnel.email %></td>
                </tr>

                <tr>
                	<th>Work in</th>
                  <td><%= @workin %></td>
                </tr>

                <tr>
                	<th>Manage</th>
                  <td><%= @manage %></td>
                </tr>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="container">
      <b>Courses Info</b><hr>
      <div class="row">
         <div class="col s12">
          <div class="container">
            <table class="striped highlight">
              <thead>
                <th>Course code</th>
                <th>Name</th>
                <th>Year-Semester</th>
                <th>Section</th>
              </thead>
                <tbody>
                  <% @personnel.sections.each do |section| %>
                    <tr>
                      <td><%= section.course.code.id  %></td>
                      <td><%= section.course.name %></td>
                      <td><%= section.year.to_s + "-" + section.semester.to_s  %></td>
                      <td><%= section.sec  %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
         </div>
      </div>
    </div>
<br>
<div class="container">
  <b>Students Info</b><hr>
    <div class="row">
       <div class="col s12">
        <div class="container">
          <table class="striped highlight">
            <thead>
              <th>Student code</th>
              <th>Name</th>
              <th>E-mail</th>
              <th>Gender</th>
              <th>Status</th>
              <th>GPAX</th>
            </thead>
              <tbody>
                <% @students.each do |student| %>
                  <tr>
                    <td><%= student.id  %></td>
                    <td><%= (student.first_name || "") + " " + (student.last_name || "") %></td>
                    <td><%= student.email %></td>
                    <td><%= student.gender  %></td>
                    <td><%= student.status  %></td>
                    <td><%= student.gpax  %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
       </div>
    </div>
  </div>

  </body>
</html>
